{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "TZ=UTC NODE_ENV=development DOTENV_CONFIG_PATH=./.env.development.local nodemon --delay 0.7 --exec \"tsx --inspect=0.0.0.0:9229 --no-cache --require dotenv/config ./src/index.ts\" -e .ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "start": "TZ=UTC NODE_ENV=production DOTENV_CONFIG_PATH=./.env.production node --import dotenv/config ./dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles"
  },
  "jest": {
    "preset": "@jumo-monorepo/jest-presets/node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "dependencies": {
    "@ai-sdk/cerebras": "^1.0.22",
    "@ai-sdk/openai": "^2.0.46",
    "@jumo-monorepo/logger": "*",
    "ai": "^5.0.62",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "heic-convert": "^2.1.0",
    "jwks-rsa": "^3.2.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "sharp": "^0.34.4",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@jumo-monorepo/eslint-config": "*",
    "@jumo-monorepo/jest-presets": "*",
    "@jumo-monorepo/typescript-config": "*",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/heic-convert": "^2.1.0",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.18.8",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^11.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3"
  }
}
